<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerifyOTPActivity"
    android:background="@color/blue">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="160dp"
        android:layout_height="184dp"
        android:background="@drawable/bg_sentotp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="OTP Verification"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.068" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center"
        android:text="Masukan kode OTP yang sudah dikirim ke"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/verifyOTPActivity_tv_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text=""
        android:textColor="@color/red"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verifyOTPActivity_tv_mobile"
        app:layout_constraintVertical_bias="0.0">


        <EditText
            android:id="@+id/verifyOTPActivity_et_inputMobile1"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_blue"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:maxLength="1"
            android:text=""
            android:textColor="@color/white"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/verifyOTPActivity_et_inputMobile2"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_blue"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:maxLength="1"
            android:text=""
            android:textColor="@color/white"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/verifyOTPActivity_et_inputMobile3"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_blue"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:maxLength="1"
            android:text=""
            android:textColor="@color/white"
            android:textSize="24sp" />


        <EditText
            android:id="@+id/verifyOTPActivity_et_inputMobile4"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_blue"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:maxLength="1"
            android:text=""
            android:textColor="@color/white"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/verifyOTPActivity_et_inputMobile5"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_blue"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:maxLength="1"
            android:text=""
            android:textColor="@color/white"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/verifyOTPActivity_et_inputMobile6"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_blue"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:maxLength="1"
            android:text=""
            android:textColor="@color/white"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Didn't receive the OTP? "
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/verifyOTPActivity_tv_resendOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Resend OTP"
            android:textColor="@color/red" />

    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/verifyOTPActivity_btn_verifyOTP"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="331dp"
        android:layout_height="43dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_white"
        android:fontFamily="@font/roboto_bold"
        android:text="Verify"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:layout_constraintVertical_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>