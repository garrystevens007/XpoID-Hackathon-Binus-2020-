<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@drawable/bg_register"
    android:paddingBottom="10dp">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/register_btn_back"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@drawable/btn_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/register_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="Create\nAccount"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.103"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_btn_back"
        app:layout_constraintVertical_bias="0.144" />

    <EditText
        android:id="@+id/register_et_email"
        android:layout_width="331dp"
        android:layout_height="38dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_email_icon"
        android:drawablePadding="12dp"
        android:fontFamily="@font/roboto_bold"
        android:hint="E-mail Address"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_tv_title"
        app:layout_constraintVertical_bias="0.223" />

    <EditText
        android:id="@+id/register_et_fullname"
        android:layout_width="331dp"
        android:layout_height="38dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_name_icon"
        android:drawablePadding="12dp"
        android:fontFamily="@font/roboto_bold"
        android:hint="Fullname"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_et_email"
        app:layout_constraintVertical_bias="0.01999998" />

    <EditText
        android:id="@+id/register_et_phonenumber"
        android:layout_width="331dp"
        android:layout_height="38dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_phone_icon"
        android:drawablePadding="14dp"
        android:fontFamily="@font/roboto_bold"
        android:hint="Phone number"
        android:paddingStart="10dp"
        android:paddingEnd="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_et_fullname"
        app:layout_constraintVertical_bias="0.018" />

    <EditText
        android:id="@+id/register_et_pass"
        android:layout_width="331dp"
        android:layout_height="38dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_password_icon"
        android:drawablePadding="12dp"
        android:fontFamily="@font/roboto_bold"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="16dp"
        android:paddingEnd="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_et_phonenumber"
        app:layout_constraintVertical_bias="0.021" />

    <EditText
        android:id="@+id/register_et_confirmpass"
        android:layout_width="331dp"
        android:layout_height="38dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_password_icon"
        android:drawablePadding="12dp"
        android:fontFamily="@font/roboto_bold"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:paddingStart="16dp"
        android:paddingEnd="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_et_pass"
        app:layout_constraintVertical_bias="0.029" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/register_btn_signup"
        android:layout_width="331dp"
        android:layout_height="43dp"
        android:background="@drawable/btn_blue_nostroke"
        android:fontFamily="@font/roboto_bold"
        android:text="Sign up"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_et_confirmpass"
        app:layout_constraintVertical_bias="0.050000012"
        style="?android:attr/borderlessButtonStyle"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/register_btn_google"
        android:layout_width="331dp"
        android:layout_height="43dp"
        android:background="@drawable/btn_google"
        android:drawableLeft="@drawable/icon_google"
        android:fontFamily="@font/roboto_bold"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:text="Continue with google"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_btn_signup"
        app:layout_constraintVertical_bias="0.056"
        style="?android:attr/borderlessButtonStyle"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_btn_google"
        app:layout_constraintVertical_bias="0.04000002">

        <ImageView
            android:layout_width="149dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@drawable/line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/roboto_bold"
            android:text="or"
            android:textColor="@color/gray"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="149dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@drawable/line" />

    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/register_btn_login"
        android:layout_width="331dp"
        android:layout_height="43dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_white_withstroke"
        android:fontFamily="@font/roboto_bold"
        android:text="Sign in"
        android:textAllCaps="false"
        android:textColor="@color/gray"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.04000002"
        style="?android:attr/borderlessButtonStyle"/>

</androidx.constraintlayout.widget.ConstraintLayout>